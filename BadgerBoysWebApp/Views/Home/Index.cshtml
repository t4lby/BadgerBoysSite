@{
    ViewData["Title"] = "Home";
}

@section Scripts {
    <!-- SCRIPT DECLARATIONS GO HERE -->
}

<div id="home-page">
    <div id="index-intro">
        <h1>Welcome.</h1>
        <p>
            Welcome to the home of Badger Boys Band.
            A local Dorset based covers band touring pubs, parties and festivals!
        </p>
    </div>
    <div id="index-logo">
        <img src="~/images/badgerBoysLogo.png" alt="Badger Boys Logo" />
    </div>
    <h2>About.</h2>
    <h5>Choose a badger to see their bio...</h5>

    <div id="bio-images" class="container text-center">
        <div class="row">
            <div class="col-md-6 col-lg-4">
                <img src="~/images/mattBadger.jpg" class="badger-boy" id="matt-badger" />
            </div>
            <div class="col-md-6 col-lg-4">
                <img src="~/images/alexBadger.jpg" class="badger-boy" id="alex-badger" />
            </div>
            <div class="col-md-12 col-lg-4">
                <img src="~/images/tommieBadger.jpg" class="badger-boy" id="tommie-badger" />
            </div>
        </div>
    </div>


    <div id="bio-holder" class="container">
        <hr />
        <div id="matt-bio" class="row" style="display: none">
            <div class="bio-photo col-xl-4 col-lg-5 col-md-6 text-center">
                <img src="~/images/mattDerp.jpg" />
            </div>
            <div class="bio-text col-xl-8 col-lg-7 col-md-6">
                <h2>Matt.</h2>
                <p>
                    As the other front man Matt plays guitar and adds vocals to Alex’s lead. He says that ‘the best thing about being a Badger Boy is seeing the response of the crowd to the music we play’ and loves performing in as many places as possible!
                    Matt also enjoys making a wide variety of music seem fresh, with only three badgers meaning the approach to songs must be unique. With mistakes and a lack of talent being his strengths, you’ll never hear the songs played in the same way again!!
                </p>
            </div>
        </div>
        <div id="alex-bio" class="row" style="display: none">
            <div class="bio-photo col-xl-4 col-lg-5 col-md-6 text-center">
                <img src="~/images/alexLegend.jpg" />
            </div>
            <div class="bio-text col-xl-8 col-lg-7 col-md-6">
                <h2>Alex.</h2>
                <p>
                    Alex is a legend.
                </p>
            </div>
        </div>
        <div id="tommie-bio" class="row" style="display: none"></div>
    </div>
    <hr />
    <div id="index-highlights">
        <div class="highlight">
            <h2>Highlights</h2>
            <p>Sturminster Newton Football Club: May 2018</p>
            <iframe class="facebook-vid" src="https://www.facebook.com/plugins/video.php?href=https%3A%2F%2Fwww.facebook.com%2Fthebadgerboys%2Fvideos%2F1561250167330785%2F&show_text=0&width=560" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allowFullScreen="true"></iframe>
        </div>
    </div>
</div>

