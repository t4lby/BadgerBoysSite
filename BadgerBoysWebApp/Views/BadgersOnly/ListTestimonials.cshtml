@model IEnumerable<BadgerBoysWebApp.Models.Testimonial>

@{
    ViewData["Title"] = "List Testimonials";
}

<h2>All Testimonials</h2>
<hr />
<p>
    <a asp-action="AddTestimonial">Add New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="col-md-8">
                    @Html.DisplayNameFor(model => model.Content)
                </th>
            <th class="col-md-2">Modify</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTestimonial", new { index = item.Index }) |
                @Html.ActionLink("Delete", "DeleteTestimonial", new { index = item.Index }) |
                @Html.ActionLink("Up", "MoveTestimonialUp", new { index = item.Index }) |
                @Html.ActionLink("Down", "MoveTestimonialDown", new { index = item.Index })
            </td>
        </tr>
}
    </tbody>
</table>
